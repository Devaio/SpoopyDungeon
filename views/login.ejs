<div ng-controller="LoginController as lCtrl">
    <div class="row">
        <div class="col-xs-12">
            <h1>Welcome to the Spoopy Dungeon</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <h3>Login to continue!</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <form ng-submit="lCtrl.login()">
                <input ng-model="lCtrl.loginUser.username" type="text" class="form-control" placeholder="Username">
                <input ng-model="lCtrl.loginUser.password" type="password" class="form-control" placeholder="Password">
                <input class="btn btn-info pull-right" type="submit">
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <h3>Sign up</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <form ng-submit="lCtrl.signup()">
                <input ng-model="lCtrl.newUser.username" type="text" class="form-control" placeholder="Username">
                <input ng-model="lCtrl.newUser.password" type="password" class="form-control" placeholder="Password">
                <input ng-model="lCtrl.newUser.confirm" type="password" class="form-control" placeholder="Confirm Password">            
                <input class="btn btn-info pull-right" type="submit">
            </form>
        </div>
    </div>
</div>